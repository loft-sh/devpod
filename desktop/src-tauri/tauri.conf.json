{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "DevPod",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "process": {
        "exit": true,
        "relaunch": true
      },
      "shell": {
        "all": true,
        "open": ".*",
        "sidecar": true,
        "scope": [
          {
            "name": "bin/devpod-cli",
            "sidecar": true,
            "args": true
          },
          {
            "name": "run-path-devpod-cli",
            "cmd": "devpod",
            "args": [
              "version"
            ]
          }
        ]
      },
      "os": {
        "all": true
      },
      "window": {
        "startDragging": true,
        "setFocus": true,
        "close": true
      },
      "fs": {
        "scope": [
          "$APPDATA/*",
          "$APPDATA/actions/*"
        ],
        "all": true
      },
      "dialog": {
        "open": true
      },
      "path": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "sh.loft.devpod",
      "category": "DeveloperTool",
      "copyright": "",
      "externalBin": [
        "bin/devpod-cli"
      ],
      "resources": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "shortDescription": "Spin up dev environments in any infra",
      "longDescription": "Dev-environments-as-code like Terraform but for dev environments. Like Codespaces but open-source, client-only and unopinionated: Works with any IDE and lets you use any cloud, kubernetes or just on localhost docker.",
      "targets": "all",
      "macOS": {
        "entitlements": "./entitlements.plist",
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "deb": {
        "depends": []
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/loft-sh/devpod/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY1NDg1NDE4MzA1NDI3QjcKUldTM0oxUXdHRlJJOVhyNUtFc2xkNFZyTmE2R2w0dTRXTFF6OUVMSW03ekphejlPM3U1M2FHUCsK",
      "windows": {
        "installMode": "passive"
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "DevPod",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 700,
        "x": 0,
        "y": 0,
        "focus": false,
        "titleBarStyle": "Overlay",
        "fullscreen": false,
        "resizable": true,
        "hiddenTitle": true,
        "transparent": true,
        "visible": false
      }
    ]
  }
}
